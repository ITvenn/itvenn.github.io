---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="A propos de moi">
  <MainCard
    title="A propos de moi"
    description="Administrateur systèmes et réseaux, et passionné de technologie, je suis Vincent HAMEL. Découvrez mon parcours, mes compétences et mes contributions à l'open source."
    textOverlay="ABOUT"
    infoIcon="lucide:user"
  >
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img src="https://github.com/ITvenn.png" alt="Vincent HAMEL" width="160" height="160" loading="eager" />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">HAMEL Vincent</h1>
          <p class="text-xl text-base-content/80 mb-4">Administrateur Systèmes & Réseaux</p>

          <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-6">
            <a
              href="https://github.com/ITvenn"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a
              href="https://twitter.com/EveSunMaple"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:twitter" class="w-4 h-4" />
              <span>Twitter</span>
            </a>
            <a href="mailto:hamelvincentpro@gmail.com" class="btn btn-sm btn-outline gap-2">
              <Icon name="lucide:mail" class="w-4 h-4" />
              <span>Email</span>
            </a>
          </div>

          <p class="text-base-content/80">
            Bonjour ! Je suis Vincent HAMEL, un administrateur systèmes et réseaux passionné par la technologie.
          </p>
        </div>
      </section>

      <!-- GitHub Stats -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>GitHub Statistics</span>
        </h2>

        <GitHubStats username="ITvenn" showLanguages={false} showCommitGraph={true} />
      </section>

      <!-- Tech Stack -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:code-2" class="w-6 h-6 text-primary" />
          <span>Tech Stack</span>
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
          {
            [
              // SYSTÈMES & RÉSEAUX
              { name: "Cisco", icon: "simple-icons:cisco", color: "oklch(0.6 0.2 180)" },
              { name: "Aruba", icon: "simple-icons:hewlettpackardenterprise", color: "oklch(0.6 0.2 90)" },
              { name: "Fortigate", icon: "simple-icons:fortinet", color: "oklch(0.6 0.2 10)" },
              { name: "Active Directory", icon: "simple-icons:microsoft", color: "oklch(0.6 0.2 250)" },
              { name: "Windows Server", icon: "simple-icons:windows", color: "oklch(0.7 0.2 240)" },
              { name: "Linux", icon: "simple-icons:linux", color: "oklch(0.6 0.2 80)" },
              { name: "VMware", icon: "simple-icons:vmware", color: "oklch(0.7 0.2 140)" },
              { name: "Hyper-V", icon: "simple-icons:microsoft", color: "oklch(0.6 0.2 250)" },
              { name: "Docker", icon: "simple-icons:docker", color: "oklch(0.6 0.2 210)" },
              { name: "Unifi", icon: "simple-icons:ubiquiti", color: "oklch(0.6 0.2 200)" },
              { name: "Veeam", icon: "simple-icons:veeam", color: "oklch(0.6 0.2 140)" },

              // LANGAGES & FRAMEWORKS
              { name: "Bash", icon: "simple-icons:gnubash", color: "oklch(0.6 0.2 120)" },
              { name: "PowerShell", icon: "simple-icons:powershell", color: "oklch(0.6 0.2 240)" },

              // OUTILS / APPLICATIONS
              { name: "Apache", icon: "simple-icons:apache", color: "oklch(0.7 0.2 30)" },
              { name: "GLPI", icon: "simple-icons:glpi", color: "oklch(0.6 0.2 50)" },
              { name: "Centreon", icon: "simple-icons:centreon", color: "oklch(0.6 0.2 90)" },
              { name: "OpenVAS", icon: "simple-icons:openvas", color: "oklch(0.6 0.2 130)" },
              { name: "Graylog", icon: "simple-icons:graylog", color: "oklch(0.6 0.2 0)" },
              { name: "PingCastle", icon: "lucide:castle", color: "oklch(0.6 0.2 10)" },
              { name: "Purple Knight", icon: "lucide:shield", color: "oklch(0.6 0.2 270)" },
            ].map((tech) => (
              <div class="flex flex-col items-center justify-center p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
                <div class="text-3xl mb-2" style={`color: ${tech.color}`}>
                  <Icon name={tech.icon} class="w-10 h-10" />
                </div>
                <span class="text-sm font-medium">{tech.name}</span>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Contribution Activity -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:activity" class="w-6 h-6 text-primary" />
          <span>Recent Activity</span>
        </h2>

        <div class="bg-base-200 rounded-xl p-6 overflow-x-auto">
          <div class="flex flex-col md:flex-row gap-8 md:gap-4 md:overflow-x-auto md:pb-2">
            {
              [
                {
                  date: "January 2024",
                  title: "Open Source Contributions",
                  desc: "Contributed to several open source projects, focusing on performance optimizations.",
                },
                {
                  date: "March 2024",
                  title: "Initiated Frosti Project",
                  desc: "Started development of the Frosti blog theme for Astro, focusing on modern design principles.",
                },
                {
                  date: "July 2024",
                  title: "Released Frosti v2",
                  desc: "Published version 2 with improved responsive design and extended plugin support.",
                },
                {
                  date: "March 2025",
                  title: "Released Frosti v3",
                  desc: "Launched version 3 of the Frosti blog theme with enhanced performance and new customization options.",
                },
              ].map((item, i) => (
                <div class="relative flex gap-4 pb-2 md:pb-0 md:min-w-[250px]">
                  <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-primary-content text-xl">
                      {i + 1}
                    </div>
                    <div class="w-0.5 h-16 bg-base-300 mt-2 md:hidden" />
                  </div>
                  <div>
                    <div class="text-sm text-base-content/60 mb-1">{item.date}</div>
                    <h3 class="text-lg font-bold">{item.title}</h3>
                    <p class="text-base-content/80 mt-1">{item.desc}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>
