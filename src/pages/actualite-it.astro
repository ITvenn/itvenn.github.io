---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
---

<BaseLayout title="Veille technologique – Flux RSS">
  <MainCard
    title="Veille technologique – Actualités IT"
    description="Suivez en temps réel les actualités de plusieurs sites spécialisés."
    textOverlay="RSS"
    infoIcon="lucide:rss"
  >
    <section class="py-4">
      <h1 class="text-3xl font-bold mb-8 flex items-center gap-2">
        <Icon name="lucide:rss" class="w-8 h-8 text-orange-500" />
        <span>Dernières actualités RSS</span>
      </h1>

      <!-- Conteneur des flux -->
      <div 
        id="rss-feeds-container" 
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
        aria-live="polite"
      >
        <!-- Les flux seront injectés ici par le script -->
        <p class="col-span-full text-center text-gray-500 animate-pulse">
          Chargement des flux d’actualités...
        </p>
      </div>
    </section>

    <!-- Script pour charger les flux RSS -->
    <script src="/js/actualites_it.js" defer></script>
  </MainCard>
</BaseLayout>

<style>
.rss-feed {
  @apply bg-white shadow-md rounded-xl p-4 border border-gray-200 transition hover:shadow-lg;
}
.rss-feed-header {
  @apply flex items-center gap-3 mb-4;
}
.rss-feed-logo {
  @apply w-10 h-10 object-contain;
}
.rss-feed-title {
  @apply text-lg font-semibold;
}
.rss-feed-list {
  @apply space-y-3;
}
.rss-feed-item a {
  @apply block text-sm text-gray-700 hover:text-blue-600;
}
.rss-feed-item-title {
  @apply font-medium;
}
.rss-feed-item-date {
  @apply text-xs text-gray-500;
}
</style>
